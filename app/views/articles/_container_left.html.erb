<div id="top_news_container">
                  <h2 class="page_title">News</h2>
                  <article id="top_posts">
                    <% @articles.each do |article| %>
                      <div class="news_container">
                          <div class="news_left">
                            <% if article.image_id.present? %>  
                              <%= link_to article do %>
                              <li class="img_fit">     
                              <%= image_tag attachment_url(article, :image), class: "article_img_list" %>
                              </li>
                              <% end%>
                            <% else %>
                              <%= link_to article do %>
                              <li class="img_fit">     
                              <%= image_tag 'insta1.png', class: "article_img_list" %>  
                              </li>   
                              <% end %>       
                            <% end %>
                          </div>
                          <div class="news_right">
                            <div class="news_right_1">
                              <p class="news_date"><%= l article.created_at %></p>
                              <p>【title】<%= article.title %></p>
                              <p class="news_text"><%= article.body %></p>
                            </div>
                            <div class="news_right_2">
                              <div class="top_news_btn"><%= link_to 'Read More', article_path(article), class: "readmore" %></div>
                            </div>
                          </div>
                      </div>
                    <% end %>
                  </article>
                </div>
                