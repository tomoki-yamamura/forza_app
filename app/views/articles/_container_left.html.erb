<div class="article-container-left">   
    <% @articles.each do |article| %>
      <article>
        <%= link_to article do %>
          <div class="article_header">
              <h3 class="article_title">
                <%= article.title %>
              </h3>
        <% end %>

            <div class="article_date">
              <%= l article.created_at %>
            </div>
          </div>
       

        <div class="article_content">
            <% if article.image_id.present? %>
              <%= image_tag attachment_url(article, :image), class: "article_img_list" %>
            <% else %>
              <%= image_tag 'insta1.png', class: "article_img_list" %>
            <% end %>
        
    

            <div class="article_body">
              <%=safe_join(article.body.split("\n"),tag(:br))%> 
            </div>
        </div>
        
        <%#= article.categories.each do |c| %>
          <%#= c.id %>
        <%# end %>
        <div class="category_container">
          <div class="category_header">
            カテゴリー
          </div>
           <ul class="category_ul">
            <% article.categories.each_with_index do |category, index| %>
             <% if index ==  article.categories.size - 1 %>
              <li class="category_li">
              <%= link_to category.name, category_path(category) %>
              </li>
          
              <% else %>
              <li class="category_li">
              <%#= link_to category.name, edit_category_path %>
              <%#= category.name %>
              <%= link_to category.name, category_path(category) %>

              </li>
              <div class="category_comma">,</div>
              <% end %>
            <% end %>
           </ul>
         </div>
       
      </article>

    <% end %>



    
  
