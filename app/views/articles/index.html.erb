<div class="article-container">
  <div class="article-container-left">   
    <% @articles.each do |article| %>
      <article>
        <%= link_to article do %>
          <div class="article_header">
              <h3 class="article_title">
                <%= article.title %>
              </h3>
        <% end %>

            <div class="article_date">
              <%= l article.created_at %>
            </div>
          </div>
       

        <div class="article_content">
            <% if article.image_id.present? %>
              <%= image_tag attachment_url(article, :image), class: "article_img_list" %>
            <% else %>
              <%= image_tag 'insta1.png', class: "article_img_list" %>
            <% end %>
        
    

            <div class="article_body">
              <%=safe_join(article.body.split("\n"),tag(:br))%> 
            </div>
        </div>
        
        <%#= article.categories.each do |c| %>
          <%#= c.id %>
        <%# end %>
        <div class="category_container">
          <div class="category_header">
            カテゴリー
          </div>
           <ul class="category_ul">
            <% article.categories.each_with_index do |category, index| %>
             <% if index ==  article.categories.size - 1 %>
              <li class="category_li">
              <%= category.name %>
              </li>
          
              <% else %>
              <li class="category_li">
              <%= link_to category.name, new_article_path %>
              <%#= category.name %>
              </li>
              <div class="category_comma">,</div>
              <% end %>
            <% end %>
           </ul>
         </div>
       
      </article>

    <% end %>



    
  
     <%#<div class="row">
     <%= link_to '新規作成', new_article_path, class: "btn btn-primary" %>
     
  </div>

  <div class="article-container-right">
      <div class="recent_entry_container">
        <div class="recent_header">
          Recent Entry
        </div>
        <div class="recent_body">
          <% @articles.each do |article| %>
                  <ul class="recent_ul">
                    <li class="recent_li">
                      <%= link_to article do %>
                        <%= article.title %>
                      <% end %>
                    </li>
                  </ul>
           <% end %>
        </div>
      </div>  
      <div class="recent_entry_container">
        <div class="recent_header">
          Category
        </div>
        <div class="recent_body">
          <% @categories.each do |category| %>
                  <ul class="recent_ul">
                    <li class="recent_li">
                      <%#= link_to article do %>
                        <%= category.name %>
                      <%# end %>
                    </li>
                  </ul>
           <% end %>
        </div>
      </div>  
 
  </div>


</div>




